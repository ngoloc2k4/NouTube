{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "@/*": ["./*"],
      "main/*": ["./desktop/src/main/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"],
  "exclude": ["desktop"]
}
